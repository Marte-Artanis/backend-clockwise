{
  "name": "clockwise-backend",
  "version": "1.0.0",
  "description": "API REST para controle de ponto de colaboradores, construída com Node.js, Fastify e Prisma. Arquitetura limpa, escalável, seguindo princípios SOLID e Clean Architecture.",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsup src/server.ts src/app.ts src/config/*.ts src/middlewares/*.ts src/modules/**/*.ts src/utils/*.ts --out-dir build --format cjs --minify --external bcrypt @sinclair/typebox @prisma/client fastify @fastify/jwt @fastify/cors zod dotenv",
    "start": "node build/server.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint . --fix",
    "format": "prettier --write .",
    "migrate": "prisma migrate deploy",
    "migrate:dev": "prisma migrate dev",
    "studio": "prisma studio"
  },
  "keywords": [
    "api",
    "fastify",
    "typescript",
    "prisma",
    "clock",
    "ponto"
  ],
  "author": "Milena",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "@eslint/js": "^9.25.0",
    "@vitest/coverage-v8": "^1.2.2",
    "@vitest/ui": "^1.2.2",
    "eslint": "^8.56.0",
    "globals": "^16.0.0",
    "typescript-eslint": "^8.30.1",
    "prisma": "^5.9.1",
    "tsup": "^8.0.2",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vite-tsconfig-paths": "^4.3.1",
    "vitest": "^1.2.2",
    "prettier": "^3.2.5"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/jwt": "^8.0.0",
    "@prisma/client": "^5.9.1",
    "@sinclair/typebox": "^0.32.14",
    "@types/bcryptjs": "^2.4.6",
    "ajv": "^8.17.1",
    "ajv-errors": "^3.0.0",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.2",
    "dotenv": "^16.4.4",
    "fastify": "^4.26.1",
    "zod": "^3.22.4",
    "zod-to-json-schema": "^3.24.5"
  }
}
