{
  "name": "clockwise-backend",
  "version": "1.0.0",
  "description": "API REST para controle de ponto de colaboradores, construída com Node.js, Fastify e Prisma. Arquitetura limpa, escalável, seguindo princípios SOLID e Clean Architecture.",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "vitest",
    "test:unit": "vitest --run tests/unit",
    "test:integration": "vitest --run tests/integration",
    "test:e2e": "vitest --run tests/e2e",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "test:ui": "vitest --ui"
  },
  "keywords": [
    "api",
    "fastify",
    "typescript",
    "prisma",
    "clock",
    "ponto"
  ],
  "author": "Milena",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@types/node": "^24.0.3",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.29.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.0",
    "prisma": "^6.10.1",
    "supertest": "^7.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@fastify/cors": "^11.0.1",
    "@fastify/jwt": "^9.1.0",
    "@fastify/type-provider-typebox": "^5.1.0",
    "@prisma/client": "^6.10.1",
    "@sinclair/typebox": "^0.34.36",
    "@types/bcryptjs": "^2.4.6",
    "bcryptjs": "^3.0.2",
    "dotenv": "^16.5.0",
    "fastify": "^5.4.0",
    "zod": "^3.25.67"
  }
}
